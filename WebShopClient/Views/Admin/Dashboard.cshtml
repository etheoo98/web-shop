@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

@using Newtonsoft.Json

<head>
    <link rel="stylesheet" type="text/css" href="~/css/admin.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="card stat-card orders">
                <div class="card-body">
                    <div class="icon-container">
                        <a asp-controller="Admin" asp-action="GetOrders">
                            <i class="bi bi-cart-check"></i>
                        </a>
                    </div>
                    <div>
                        <div class="card-title">Total Orders</div>
                        <h2>@ViewBag.OrdersCount</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card stat-card customers">
                <div class="card-body">
                    <div class="icon-container">
                        <a asp-controller="CustomerManagement" asp-action="Index">
                            <i class="bi bi-person person-icon"></i>
                        </a>
                    </div>
                    <div>
                        <div class="card-title">Customers</div>
                        <h2>@ViewBag.CustomerCount</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card stat-card revenue">
                <div class="card-body">
                    <div class="icon-container">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                    <div>
                        <div class="card-title">Revenue</div>
                        <h2>@ViewBag.TotalRevenue.ToString("C")</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card stat-card products">
                <div class="card-body">
                    <div class="icon-container">
                        <a asp-controller="Admin" asp-action="ManageProducts">
                            <i class="bi bi-box"></i>
                        </a>
                    </div>
                    <div>
                        <div class="card-title">Products</div>
                        <h2>@ViewBag.ProductsCount</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-chart-line"></i> Sales Overview
                </div>
                <div class="card-body">
                    <canvas id="salesChart" class="chart-container"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-chart-pie"></i> Top Products
                </div>
                <div class="card-body">
                    <canvas id="productsChart" class="chart-container"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i> Latest Added Products
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Date Added</th>
                                    <th>Description</th>
                                    <th>Stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in ViewBag.LatestProducts)
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>@product.AddDate.ToShortDateString()</td>
                                        <td>@product.Description</td>
                                        <td>@product.Quantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Månad sales data
        var monthlyRevenue = @Html.Raw(JsonConvert.SerializeObject(ViewBag.MonthlyRevenue));

        var months = monthlyRevenue.map(m => new Date(2024, m.Month - 1).toLocaleString('default', { month: 'long' }));
        var revenues = monthlyRevenue.map(m => m.Revenue);

        // Sales Chart
        var ctx = document.getElementById('salesChart').getContext('2d');
        var salesChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: months,
                datasets: [{
                    label: 'Revenue',
                    data: revenues,
                    borderColor: '#8e7dbe',
                    backgroundColor: 'rgba(142, 125, 190, 0.1)',
                    fill: true,
                    tension: 0.4,
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        display: true,
                        title: {
                            display: true,
                            text: 'Month'
                        }
                    },
                    y: {
                        display: true,
                        title: {
                            display: true,
                            text: 'Revenue 2024'
                        },
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                }
            }
        });

        // Top Products Chart
        var topProducts = @Html.Raw(JsonConvert.SerializeObject(ViewBag.TopProducts));

        var productNames = topProducts.map(p => p.ProductName);
        var productQuantities = topProducts.map(p => p.Quantity);

        var ctx = document.getElementById('productsChart').getContext('2d');
        var productsChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: productNames,
                datasets: [{
                    data: productQuantities,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.6)',
                        'rgba(54, 162, 235, 0.6)',
                        'rgba(255, 206, 86, 0.6)',
                        'rgba(75, 192, 192, 0.6)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            label: function (tooltipItem) {
                                return tooltipItem.label + ': ' + tooltipItem.raw + ' units';
                            }
                        }
                    }
                }
            }
        });
    });
</script>
