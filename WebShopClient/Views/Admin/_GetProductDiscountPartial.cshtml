@model WebShopClient.Models.ResponseModels.Product

<div>
	<div class="container">
		<div class="d-flex justify-content-between p-2">
			<p class="me-2">Product:</p>
			<p>@Model.Name</p>
		</div>
		<div class="d-flex justify-content-between p-2">
			<p class="me-2">Discount:</p>
			<p>@(Model.Discount.Percent)%</p>
		</div>
		<div class="d-flex justify-content-between p-2">
			<p class="me-2">Duration:</p>
			<p>@((Model.Discount.EndDate - Model.Discount.StartDate).TotalDays) days</p>
		</div>
		<div class="d-flex justify-content-between p-2">
			<p class="me-2">Start date:</p>
			<p>@Model.Discount.StartDate.ToString("yyyy-MM-dd")</p>
		</div>
		<div class="d-flex justify-content-between p-2">
			<p class="me-2">End date:</p>
			<p>@Model.Discount.EndDate.ToString("yyyy-MM-dd")</p>
		</div>
	</div>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
	<button type="button" class="btn btn-danger">Remove Discount</button>
</div>