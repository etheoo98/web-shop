@model List<WebShopClient.Models.ResponseModels.Product>

@{
    ViewData["Title"] = "Manage Products";
}

<h2>Manage Products</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                @if (product.Quantity > 0)
                {
                    <td>@product.Quantity</td>
                }                
                else
                {
                    <td>
                        <span class="text-danger">Out of stock!</span>
                    </td>
                }
                <td>
	                <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
	                <a asp-action="CreateDiscount" asp-route-id="@product.Id" class="btn btn-danger">Add campaign</a>
                </td>
            </tr>
        }
    </tbody>
</table>
